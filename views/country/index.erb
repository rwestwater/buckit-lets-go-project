<h1>A list of your current countries<br> To add a new country, please click new country</h1>

<% for country in @countries  %>
  <p><h3>Name: <%= country.name %></h3></p>
  <p><h3><a href="/country/<%= country.id %>">Show Country</a></h3></p>

  <form method="post" action="/country/<%=country.id %>/delete">
    <input type="submit" value="Delete Country">
  </form>



  <hr />
<% end  %>
